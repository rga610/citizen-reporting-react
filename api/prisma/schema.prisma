generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id       Int           @id @default(autoincrement())
  slot     Int
  startTs  DateTime      @map("start_ts")
  endTs    DateTime?     @map("end_ts")
  scans    Scan[]
  parts    Participant[]

  @@map("sessions")
}

model Participant {
  id           String    @id @default(uuid())
  username     String    @map("username")
  sessionId    Int       @map("session_id")
  session      Session   @relation(fields: [sessionId], references: [id])
  treatment    String
  totalReports Int       @default(0) @map("total_reports")
  isActive     Boolean   @default(false) @map("is_active")
  createdAt    DateTime  @default(now()) @map("created_at")
  scans        Scan[]

  @@map("users")
}

model Issue {
  id          String  @id
  sessionSlot Int     @map("session_slot")
  scans       Scan[]

  @@map("issues")
}

model Scan {
  id            BigInt       @id @default(autoincrement())
  userId        String       @map("user_id")
  participant   Participant  @relation(fields: [userId], references: [id])
  treatment     String
  issueId       String       @map("issue_id")
  issue         Issue        @relation(fields: [issueId], references: [id])
  sessionId     Int          @map("session_id")
  session       Session      @relation(fields: [sessionId], references: [id])
  periodId      Int          @map("period_id")
  lat           Float?
  lon           Float?
  accuracy      Float?
  ts            DateTime     @default(now())

  @@unique([userId, issueId])
  @@index([sessionId, issueId])
  @@index([sessionId])
  @@map("reports")
}